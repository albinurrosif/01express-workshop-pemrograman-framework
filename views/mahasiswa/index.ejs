<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Daftar Mahasiswa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/kategori"> Kategori </a>
            <a class="nav-link" href="/mahasiswa"> Mahasiswa </a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container mt-5">
      <h2>Daftar Mahasiswa</h2>
      <% if (messages.success) { %>
      <div class="alert alert-info" role="alert"><%- messages.success %></div>
      <% } %>
      <div class="row">
        <div class="col">
          <a href="/mahasiswa/create" class="btn btn-sm btn-success">Tambah</a>
          <a href="/keahlian" class="btn btn-sm btn-primary">Skill</a>
          <a href="/pendidikan" class="btn btn-sm btn-warning">Pendidikan</a>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">NRP</th>
                <th scope="col">Nama Depan</th>
                <th scope="col">Nama Belakang</th>
                <th scope="col">Jenis Kelamin</th>
                <th scope="col">Agama</th>
                <th scope="col">Umur</th>
                <th scope="col">Tinggi Badan</th>
                <th scope="col">Gol. Darah</th>
                <th scope="col">Alamat</th>
                <th scope="col">Hobi</th>
                <th scope="col">Email</th>
                <th scope="col">No. Telepon</th>
                <th scope="col" colspan="2">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <th scrsope="row"><%= (i+1) %></th>
                <td><%= data[i].nrp %></td>
                <td><%= data[i].nama_depan %></td>
                <td><%= data[i].nama_belakang %></td>
                <td><%= data[i].jenis_kelamin %></td>
                <td><%= data[i].agama %></td>
                <td><%= data[i].umur %></td>
                <td><%= data[i].tinggi_badan %></td>
                <td><%= data[i].gol_darah %></td>
                <td><%= data[i].alamat %></td>
                <td><%= data[i].hobi %></td>
                <td><%= data[i].email %></td>
                <td><%= data[i].no_telpon %></td>
                <td>
                  <a href="/mahasiswa/edit/<%= data[i].id_mahasiswa %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/mahasiswa/delete/<%= data[i].id_mahasiswa %>" class="btn btn-sm btn-danger">Delete</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
